<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_live_title_height"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/inke_wrap_wrap"
            android:layout_height="@dimen/search_live_title_height"
            android:layout_marginLeft="@dimen/search_cate_title_margin_l"
            android:gravity="center_vertical"
            android:textColor="@color/dark"
            android:textSize="@dimen/tv_cate_title_size" />

        <TextView
            android:id="@+id/tv_more"
            style="@style/inke_wrap_wrap"
            android:layout_height="@dimen/search_live_title_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/user_item_portrait_margin_l"
            android:drawablePadding="6.0dip"
            android:drawableRight="@drawable/global_arrow_grey"
            android:gravity="center_vertical"
            android:text="更多"
            android:textColor="@color/gray"
            android:textSize="@dimen/tv_search_live_cate_more_size" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="150.0dip" />

    <View
        style="@style/inke_bg_line"
        android:layout_height="10.0dip"
        android:layout_marginTop="8.0dip" />
</LinearLayout>