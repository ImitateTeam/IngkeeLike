<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_and_safe"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#2b2b2b2b"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#00ffa8"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/arrow_back"
            android:layout_centerVertical="true"
            android:src="@drawable/title_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/account_safe_title"
            android:text="账号和安全"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:src="@drawable/me_safe_high"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="240dp"/>
        <TextView
            android:gravity="center"
            android:text="安全等级：高"
            android:textSize="16sp"
            android:textColor="#00ff00"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </LinearLayout>
    <TextView
        android:padding="5dp"
        android:id="@+id/txt_safe_tip"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="#bbbbbb"
        android:text="通过以下设置可提高安全等级"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <RelativeLayout
        android:padding="5dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:text="手机绑定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:text="+8615121114863"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



</LinearLayout>
