<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item android:bottom="0.0px">
                <shape>
                    <solid android:color="@color/light_gray_2" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item android:bottom="0.0px">
                <shape>
                    <solid android:color="@color/light_gray_2" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false" android:state_pressed="true">
        <layer-list>
            <item android:bottom="0.0px">
                <shape>
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="0.0px">
                <shape>
                    <solid android:color="@color/light_gray_2" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item android:bottom="0.0px">
                <shape>
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:right="0.0px">
                <shape>
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>